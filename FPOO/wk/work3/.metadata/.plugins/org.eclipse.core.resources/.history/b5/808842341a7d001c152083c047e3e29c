package modelo;

import java.util.Scanner;

public class Calc {

		public static Scanner entrada;
	
		public static void main(String[] args) {
		entrada = new Scanner(System.in);
		int val1, val2, result1, result2, result3, result4;
		System.out.print("Digite um valor inteiro: ");
		val1 = entrada.nextInt();
		System.out.print("Digite outro valor: ");
		val2 = entrada.nextInt();
		
		result1 = val1 + val2;
		result2 = val1 - val2;
		result3 = val1 * val2;
		result4 = val1 / val2;
		
		System.out.println("A soma dos dois valores é " + result1);
		System.out.println("O primeiro valor menos o segundo é " + result2);
		System.out.println("A multiplicação dos dois valores é "+ result3);
		System.out.println("A divisão do valor1 pelo valor "+ result4);
		
	}

}

